<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 버튼 전체 배경 -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/title_bar"/> <!-- 배경색 -->
        </shape>
    </item>
    <!-- 왼쪽 테두리 -->
    <item android:top="-2dp" android:bottom="-2dp" android:right="-2dp" android:left="-1dp">
        <shape android:shape="rectangle">
            <solid android:color="#00000000"/> <!-- 투명 배경 -->
            <stroke
                android:width="2dp"
                android:color="@color/material_dynamic_neutral90" />
        </shape>
    </item>
</layer-list>